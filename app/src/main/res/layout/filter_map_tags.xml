<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cvFilterMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/halfContentPadding"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvFilterMapType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/ivCloseType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/quarterContentPadding"
                android:src="@mipmap/ic_close_circle_outline_grey600_18dp"
                android:tint="@android:color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvFilterMapCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/halfContentPadding"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvFilterMapCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/ivCloseCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/quarterContentPadding"
                android:src="@mipmap/ic_close_circle_outline_grey600_18dp"
                android:tint="@android:color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
