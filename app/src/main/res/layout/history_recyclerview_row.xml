<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/halfContentPadding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTypeAndPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/contentPadding"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrayAndroid"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/halfContentPadding"
            android:layout_marginBottom="@dimen/halfContentPadding"
            android:layout_marginRight="@dimen/halfContentPadding"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <android.support.v7.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/quarterContentPadding"
                android:layout_marginRight="@dimen/contentPadding"
                card_view:cardCornerRadius="18dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_height="36dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/holo_red_dark"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tvOtherUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/halfContentPadding"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/halfContentPadding">
            <ImageView
                android:id="@+id/ivMarkerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/contentPadding"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_map_marker_grey600_24dp" />
            <TextView
                android:id="@+id/tvLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentPadding"
                android:layout_toRightOf="@+id/ivMarkerIcon"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tvLocationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentPadding"
                android:layout_toRightOf="@+id/ivMarkerIcon"
                android:layout_below="@+id/tvLocationName"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvDateCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/halfContentPadding"
            android:drawableLeft="@mipmap/ic_calendar_clock_grey600_24dp"
            android:drawablePadding="32dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/halfContentPadding"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/contentPadding"
                android:src="@mipmap/ic_create_white_24dp"
                android:tint="@color/grey600" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentPadding"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivStaticMap"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
