<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/spot_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:title="@string/Create_Spot"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="@dimen/toolbarElevation"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/rlLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/contentPadding">
        <ImageView
            android:id="@+id/ivMapMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/contentPadding"
            android:layout_marginEnd="@dimen/contentPadding"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_map_marker_grey600_24dp"/>
        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contentPadding"
            android:layout_marginLeft="@dimen/contentPadding"
            android:layout_toRightOf="@+id/ivMapMarker"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <TextView
            android:id="@+id/tvLocationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contentPadding"
            android:layout_marginLeft="@dimen/contentPadding"
            android:layout_toRightOf="@+id/ivMapMarker"
            android:layout_below="@+id/tvLocationName"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.Small"/>
        <TextView
            android:id="@+id/tvAddLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contentPadding"
            android:layout_marginLeft="@dimen/contentPadding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_toRightOf="@+id/ivMapMarker"
            android:text="@string/Add_Location"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorAccent"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/contentPadding"
        android:layout_below="@+id/rlLocation"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivTypeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/contentPadding"
            android:src="@mipmap/ic_star_grey600_24dp"/>
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contentPadding"
            android:layout_marginRight="@dimen/halfContentPadding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/Type"
            android:textColor="@color/colorAccent"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <TextView
            android:id="@+id/tvSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/halfContentPadding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/Category"
            android:textColor="@color/colorAccent"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/contentPadding"
        android:layout_below="@+id/llType"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_currency_usd_grey600_24dp"
            android:layout_marginRight="@dimen/contentPadding"
            android:layout_marginEnd="@dimen/contentPadding"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/contentPadding"
            android:layout_marginStart="@dimen/contentPadding">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_marginStart="-4dp"
                android:hint="@string/Price"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:id="@+id/cbOffers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/contentPadding"
            android:layout_marginStart="@dimen/contentPadding"
            android:text="@string/Allow_offers"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/contentPadding"
        android:layout_below="@+id/llCurrency"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/contentPadding"
            android:layout_marginRight="@dimen/contentPadding"
            android:src="@mipmap/ic_cart_plus_grey600_24dp"
            android:tint="@color/grey600"/>
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/contentPadding"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llQuantity"
        android:layout_margin="@dimen/contentPadding">
        <ImageView
            android:id="@+id/ivDateTimeIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/contentPadding"
            android:src="@mipmap/ic_calendar_clock_grey600_24dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/quarterContentPadding"
                android:layout_marginLeft="@dimen/contentPadding"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/Date"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/grey600"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentPadding"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/Time"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/grey600" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/cbNow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/contentPadding"
            android:layout_marginStart="@dimen/contentPadding"
            android:text="@string/Now"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/llDateTime"
        android:layout_margin="@dimen/contentPadding">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/contentPadding"
            android:layout_marginRight="@dimen/contentPadding"
            android:src="@mipmap/ic_format_title_grey600_24dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contentPadding"
            android:layout_marginLeft="@dimen/contentPadding"
            app:counterEnabled="true"
            app:counterMaxLength="120">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Description"
                android:layout_marginStart="-4dp"
                android:layout_marginLeft="-4dp"
                android:maxLines="4"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bCreateSpot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/contentPadding"
        android:background="@color/colorAccent"
        android:text="@string/Create_Spot"
        android:textColor="@android:color/white" />

</RelativeLayout>

