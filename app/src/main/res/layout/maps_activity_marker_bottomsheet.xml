<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetMarker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="10dp"
    android:animateLayoutChanges="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/bsToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/ivCloseBottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_close_white_24dp"
                android:paddingRight="@dimen/doubleContentPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvCategoryAndPrice"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/quarterContentPadding"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/ivCloseBottomSheet"/>
            <TextView
                android:id="@+id/tvType"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/ivCloseBottomSheet"
                android:layout_below="@+id/tvCategoryAndPrice"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tvPosterFirstNameAndRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding"
            android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
            android:drawableTint="@color/grey600"
            android:drawablePadding="@dimen/doubleContentPadding"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvQuantityAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding"
            android:drawableLeft="@mipmap/ic_cart_plus_grey600_24dp"
            android:drawablePadding="@dimen/doubleContentPadding"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvStartTimeAndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding"
            android:drawableLeft="@mipmap/ic_calendar_clock_grey600_24dp"
            android:drawablePadding="@dimen/doubleContentPadding"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding">
            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/doubleContentPadding"
                android:src="@mipmap/ic_map_marker_grey600_24dp"/>
            <TextView
                android:id="@+id/tvLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivLocationIcon"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tvLocationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivLocationIcon"
                android:layout_below="@+id/tvLocationName"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding"
            android:drawableLeft="@mipmap/ic_format_title_grey600_24dp"
            android:drawableTint="@color/grey600"
            android:drawablePadding="@dimen/doubleContentPadding"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/contentPadding">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbMakeOffer"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mbBuyNow"
                android:text="@string/Make_Offer"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbBuyNow"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/Buy_Now"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
