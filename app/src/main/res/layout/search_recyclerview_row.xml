<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlLocation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/contentPadding">
    <ImageView
        android:id="@+id/ivMapMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/contentPadding"
        android:src="@mipmap/ic_map_marker_grey600_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivMapMarker"
        android:layout_toEndOf="@+id/ivMapMarker"
        android:layout_marginStart="@dimen/contentPadding"
        android:layout_marginLeft="@dimen/contentPadding"
        android:textAppearance="@android:style/TextAppearance.Medium"/>
    <TextView
        android:id="@+id/tvLocationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivMapMarker"
        android:layout_toEndOf="@+id/ivMapMarker"
        android:layout_below="@+id/ivMapMarker"
        android:layout_marginLeft="@dimen/contentPadding"
        android:layout_marginStart="@dimen/contentPadding"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@android:style/TextAppearance.Small"/>
</RelativeLayout>
